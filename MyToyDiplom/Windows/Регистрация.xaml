<Window x:Class="MyToyDiplom.Windows.Регистрация"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyToyDiplom.Windows"
        mc:Ignorable="d"
        Title="Регистрация" x:Name="WindowAddEdit" Background="AliceBlue" Loaded="Window_Loaded3" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Width="400">
    <StackPanel>
        <Label>Фамилия</Label>
        <TextBox x:Name="Surn" Text="{Binding Path=Surname}"></TextBox>
        <Label>Имя</Label>
        <TextBox x:Name="Nam" Text="{Binding Path=Name}"></TextBox>
        <Label>Отчество</Label>
        <TextBox x:Name="LasNam" Text="{Binding Path=Patronymic}"></TextBox>
        <Label>Логин</Label>
        <TextBox x:Name="Log" Text="{Binding Path=Login}"></TextBox>
        <Label>Пароль</Label>
        <TextBox x:Name="Pas" Text="{Binding Path=Password}"></TextBox>
        <Button Content="Зарегестрироваться" Background="CadetBlue" x:Name="RegBut" IsDefault="True" Click="RegistrationClick"></Button>
        <Button Content="Отмена" Background="CadetBlue" IsDefault="True" Click="CanselClick"></Button>
    </StackPanel>
</Window>
