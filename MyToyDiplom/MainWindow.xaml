<Window x:Class="MyToyDiplom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyToyDiplom"
        mc:Ignorable="d"
        Title="Моя Игрушка" Background="AliceBlue" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Initialized="Window_Initialized" Height="600" Width="900">
    <Window.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CartButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#FFE91E63"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC2185B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AuthButtonStyle" TargetType="Button" BasedOn="{StaticResource MainButtonStyle}">
            <Setter Property="Background" Value="#FF3F51B5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF303F9F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF2196F3" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Магазин Игрушек" 
                           Style="{StaticResource TitleTextStyle}"
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Grid.Column="0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="AuthButton" Content="Войти" 
                            Style="{StaticResource AuthButtonStyle}"
                            Click="AuthButton_Click"
                            Margin="0,0,10,0"/>

                    <Button x:Name="CartButton" Content="Корзина (0)" 
                            Style="{StaticResource CartButtonStyle}"
                            Click="CartButton_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Меню -->
            <StackPanel Grid.Column="0" Background="#FFF5F5F5">
                <Button Content="Товары" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="ProductsButton_Click"/>
                <Button Content="Категории" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="CategoriesButton_Click"/>
                <Button Content="Поставщики" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="SuppliersButton_Click"/>
                <Button Content="Сотрудники" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="EmployeesButton_Click"/>
                <Button Content="Продажи" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="SalesButton_Click"/>
                <Button Content="Поставки" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="DeliveriesButton_Click"/>
                <Button Content="Доставка" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="ShippingButton_Click"/>
                <Button Content="Отчеты" 
                        Style="{StaticResource MainButtonStyle}"
                        Click="ReportsButton_Click"/>
            </StackPanel>

            <!-- Контент и рекламный баннер -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="250"/>
                </Grid.RowDefinitions>

                <Frame x:Name="MainFrame" Grid.Row="0" NavigationUIVisibility="Hidden"/>

                <!-- Рекламный баннер с автоматической сменой изображений -->
                <Border Grid.Row="1" BorderBrush="#FFBDBDBD" BorderThickness="0,1,0,0">
                    <Grid>
                        <Image x:Name="PromoImage" Stretch="UniformToFill"/>
                        <TextBlock Text="Акция недели!" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Top"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="White" 
                                   Margin="0,10"
                                   />
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Подвал -->
        <StatusBar Grid.Row="2" Background="#FFE0E0E0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding CurrentDateTime, StringFormat='Дата: {0:dd.MM.yyyy}, Время: {0:HH:mm:ss}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
